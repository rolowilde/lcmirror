#!/bin/bash

target="{{ archlinux_target }}"
lock="{{ archlinux_lock }}"
source_url='{{ archlinux_source_url }}'
lastupdate_url='{{ archlinux_lastupdate_url }}'

[ ! -d "${target}" ] && mkdir -p "${target}"

exec 9>"${lock}"
flock -n 9 || exit

{% set delay_updates = '--delay-updates' if archlinux_delay_updates %}
rsync_cmd() {
	local -a cmd=(rsync -rlptH --safe-links --delete-delay {{ delay_updates }}
		"--timeout=600" "--contimeout=60" --no-motd)

	if stty &>/dev/null; then
		cmd+=(-h -v --progress)
	else
		cmd+=("--info=name1")
	fi

	"${cmd[@]}" "$@"
}

# if we are called without a tty (cronjob) only run when there are changes
if ! tty -s && [[ -f "$target/lastupdate" ]] && diff -b <(curl -Ls "$lastupdate_url") "$target/lastupdate" >/dev/null; then
{% if archlinux_save_lastsync %}
	# keep lastsync file in sync for statistics generated by the Arch Linux website
	rsync_cmd "$source_url/lastsync" "$target/lastsync"
{% endif %}
	exit 0
fi

rsync_cmd \
{% for opt in archlinux_rsync_options | default() %}
	{{ opt }} \
{% endfor %}
	"${source_url}" "${target}"

{% if archlinux_verbose %}
echo "Last sync was $(date -d @$(cat ${target}/lastsync))"
{% endif %}
